<resources>


    <!-- Base application theme. -->

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyActionButtonStyle" parent="AppTheme.Base">
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>

    <style name="nav_list_item">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeaderFont">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#551a8b</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="LabelMediumGreen">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#009900</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="LabelSmallPurple">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#551a8b</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="LabelSmallWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="LabelListItemPurple">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#551a8b</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="LabelSmallGray">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#696969</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="Gray_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#696969</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
