<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LabelListItemPurple"
        android:gravity="center_horizontal">
    </TextView>

    <TextView
        android:id="@+id/rewardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LabelListItemPurple"
        android:gravity="center_horizontal"
        android:layout_below="@+id/userName"/>

    <RelativeLayout
        android:id="@+id/coinLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rewardName"
        android:layout_centerInParent="true"
          >

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelListItemPurple"
            android:text="100"
            />

        <TextView
            android:id="@+id/outOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text=" out of "
            style="@style/LabelListItemPurple"
            android:layout_toRightOf="@+id/points"
            android:layout_toEndOf="@+id/points"/>

        <TextView
            android:id="@+id/rewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelListItemPurple"
            android:layout_toRightOf="@+id/outOf"
            android:layout_toEndOf="@+id/outOf"
            />

        <ImageView
            android:id="@+id/goldCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:src="@drawable/gold_coin_24"
            android:layout_toRightOf="@+id/rewardPoints"
            android:layout_toEndOf="@+id/rewardPoints"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/coinLayout">
        <RelativeLayout
            android:id="@+id/arcChartLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.hookedonplay.decoviewlib.DecoView
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                custom:dv_lineWidth="26dp"
                android:id="@+id/dynamicArcView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:dv_arc_gravity_horizontal="Fill"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/textPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/HeaderFont"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>