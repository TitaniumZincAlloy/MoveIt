<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tinakit.moveit" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".service.LocationService"
            android:exported="false" />

        <activity android:name=".activity.ViewRewards" />
        <activity android:name=".activity.UserSummaryActivity" />
        <activity android:name=".activity.RegisterUserActivity" />
        <activity
            android:name=".activity.SensorAPI"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".activity.TrackerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activity.FusedLocationApi"
            android:label="@string/title_activity_fused_location_api" >
        </activity>
        <activity
            android:name=".activity.ActivityHistory"
            android:label="@string/activity_history" >
        </activity>
        <activity
            android:name=".activity.ActivityChooser"
            android:label="@string/title_activity_activity_chooser" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
